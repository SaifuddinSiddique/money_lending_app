<h1>Loan Details</h1>

<p><strong>Amount:</strong> â‚¹<%= @loan.amount %></p>
<p><strong>Interest Rate:</strong> <%= @loan.interest_rate %>%</p>
<p><strong>Status:</strong> <%= @loan.status.humanize %></p>

<% if @loan.waiting_for_adjustment_acceptance? %>
  <%= link_to "Accept Adjustment", accept_loan_path(@loan), method: :post %> |
  <%= link_to "Reject Adjustment", reject_loan_path(@loan), method: :post, data: { confirm: "Are you sure you want to reject this?" } %> |
  <%= link_to "Request Readjustment", request_readjustment_loan_path(@loan), method: :post %>
<% end %>

<% if @loan.approved? %>
  <%= link_to "Confirm Loan", confirm_loan_path(@loan), method: :post %> |
  <%= link_to "Reject Loan", reject_loan_path(@loan), method: :post %>
<% end %>

<% if @loan.open? %>
  <%= button_to "Repay Loan", repay_loan_path(@loan), method: :post %>
<% end %>

